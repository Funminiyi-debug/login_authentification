<% const title = 'Register'%>
	<div class="myheader">
			
		<nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top">
			<a href="../index.html" class="navbar-brand">FoodNowApp</a>
		</nav>

	</div>
	

<div class="myforms">
	<div class="buttons nav">
			<a data-toggle="tab" href="#menu1" class="btn btn-info btn-lg" id="signinbutton">SIGN IN</a>
			<a data-toggle="tab" href="#menu2" class="btn btn-info btn-lg active" id="registerbutton">REGISTER</a>
	</div>

	<div class="content-tab py-4 container" id="content">
	  
		
	  <div id="menu2" class="menu2 card">
	    <h3 class="card-header white-text py-4 bg-info">REGISTER</h3>		
			<%- include ../partials/register-messages %>			
		<div class="card-body px-lg-5 pt-0">
			<form action="/users/register" method="POST" class="py-4">
				<div class="md-form form-group">
						<label for="firstname">First Name</label>
						<input type="text" class="form-control form-control-lg" id="firstname" placeholder="name" name="firstName" value="<%= typeof firstName != 'undefined' ? firstName : ''%>">
				</div>
				<div class="form-group">
					<label for="lastname">Last Name</label>
					<input type="text" class="form-control form-control-lg" id="lastname" placeholder="name" name="lastName" value="<%= typeof lastName != 'undefined' ? lastName : ''%>">
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" class="form-control form-control-lg" id="email" placeholder="email address" name="email" value="<%= typeof email != 'undefined' ? email : ''%>">
				</div>
				<div class="form-group">
					<label for="contact">Contact Number</label>
					<input type="phone" class="form-control form-control-lg md-form" id="contact" placeholder="contact number" name="phone" value="<%= typeof phone != 'undefined' ? phone : ''%>">
				</div>
				<div class="form-group">
					<label for="pwd">Password</label>
					<input type="password" class="form-control form-control-lg" id="pwd" placeholder="at least 6 characters" name="password" value="<%= typeof password != 'undefined' ? password : ''%>">
				</div>
				<div class="form-group">
					<label for="confirmpwd">Confirm Password</label>
					<input type="password" class="form-control form-control-lg" id="confirmpwd" placeholder="at least 6 characters" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : ''%>">
				</div>

				<div class="checkbox">
					<label><input type="checkbox" class="px-5" name="agree" value="agreed">       I agree to the Terms &amp; Conditions and Privacy Policy</label>
				</div>
				<button type="submit" class="btn btn-primary btn-info btn-lg">REGISTER</button>
			</form> 
		</div>
	  </div>
	<div id="menu1" class="card menu1">
    		<h3 class="card-header white-text py-4 bg-info">SIGN IN</h3>
    		<%- include ../partials/login-messages %>	
    		<div class="card-body px-lg-5 pt-0">
        	<form action="/users/login" method="POST" class="py-4">
            	<div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control form-control-lg" id="email" placeholder="email address" name="email" value="<%= typeof email != 'undefined' ? email : ''%>">
            </div>
            <div class="form-group">
                    <label for="pwd">Password</label>
                    <input type="password" class="form-control form-control-lg" id="pwd" placeholder="at least 6 characters" name="password" value="<%= typeof password != 'undefined' ? password : ''%>">
            </div>
            <p class="lead">Forgot password</p>
            <button type="submit" class="btn btn-primary btn-info btn-lg">SIGN IN</button>
        </form> 
      </div>
  	</div>
	  
	
</div>

<script src="/javascript/signin.js" async>

</script>
